<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/area_back"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="뒤로가기"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/bung"
        style="?android:borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ListView
        android:id="@+id/area"
        android:layout_width="102dp"
        android:layout_height="262dp"
        android:clickable="true"
        android:fontFamily="@font/yang"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"></ListView>

    <ListView
        android:id="@+id/sex"
        android:layout_width="102dp"
        android:layout_height="262dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:fontFamily="@font/yang"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/a_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"></ListView>

    <ListView
        android:id="@+id/a_time"
        android:layout_width="102dp"
        android:layout_height="262dp"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:fontFamily="@font/yang"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/area"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"></ListView>

    <TextView
        android:id="@+id/area_explanation"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/black_corner"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관광요소 둘러보기"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/bung"
        style="?android:borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>