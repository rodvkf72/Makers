<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E6DD5FA">

    <Button
        android:id="@+id/writecontents_back"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="뒤로가기"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/bung"
        style="?android:borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/write_area_select"
        style="?android:borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:fontFamily="@font/bung"
        android:text="지역 선택"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <Button
        android:id="@+id/partycount"
        style="?android:borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:fontFamily="@font/bung"
        android:text="참여 인원"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <Button
        android:id="@+id/write_time_select"
        style="?android:borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:fontFamily="@font/bung"
        android:text="일정 선택"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195" />

    <EditText
        android:id="@+id/write_title"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/black_corner"

        android:ems="12"
        android:hint=" 제목 "
        android:inputType="textMultiLine|textNoSuggestions"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <EditText
        android:id="@+id/write_main"
        android:layout_width="350dp"
        android:layout_height="272dp"
        android:background="@drawable/black_corner"
        android:ems="12"
        android:hint=" 내용 "
        android:inputType="textMultiLine|textNoSuggestions"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <Button
        android:id="@+id/write_finish"
        style="?android:borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:fontFamily="@font/bung"
        android:text="등 록"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855" />

</androidx.constraintlayout.widget.ConstraintLayout>